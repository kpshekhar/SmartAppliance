<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green"
        android:gravity="fill"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/addAppliance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="10dp"
                android:layout_marginTop="18dp"
                android:layout_weight="2"
                android:background="@drawable/button_curve"
                android:text="Add Appliance"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="14dp"
                android:text="OR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUsrName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:text="Select an Appliance from List"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        <Spinner
            android:id="@+id/appPicker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewAppliance"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:contentDescription="Pick An Appliance"
            android:prompt="@string/Appliance_Pick"
            android:textSize="30sp" />

        <Button
            android:id="@+id/viewAppliance"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_curve"
            android:padding="10dp"
            android:text="VIEW"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/editAppliance"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_curve"
            android:text="EDIT"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/delAppliance"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_curve_black"
            android:text="DELETE"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Back"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="0.40"
            android:background="@drawable/button_curve_black"
            android:text="BACK"
            android:textColor="#ffffff" />

</LinearLayout>
    </RelativeLayout>

</ScrollView>